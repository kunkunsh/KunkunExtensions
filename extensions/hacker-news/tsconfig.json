{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "noEmit": true,
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    "verbatimModuleSyntax": true,
  },
  "include": [
    "."
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}